<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- generated by chef, changes will be overwritten -->

<configuration>
  <% @options.each do |name, value| -%>
    <% unless value.nil? %>
    <property>
      <name><%= name %></name>
      <% if value.respond_to?(:join) -%> 
      <value><%= value.join(",") %></value>
      <% else -%>
      <value><%= value %></value>
      <% end -%>
    </property> 
  	<% end -%> 
  <% end -%>
 </configuration>
